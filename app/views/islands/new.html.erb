<% if current_user.admin == true %>
<h1>new island</h1>
<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <div class="form-inputs">
  <%= simple_form_for [@island] do |f| %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :image, label: "image" %>
  <%= f.input :category, label: "category" %>
