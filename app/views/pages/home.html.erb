<div class="container">
    <% if user_signed_in? && current_user.admin == true %>
      <%= link_to 'créer un article', new_article_path, class: 'btn btn-warning' %>
    <% end %>

    <div>
    <h1 class="card p-5 mb-4 font-custom">Tu penses être un vrai fan de One Piece ? Prouve-le en pariant des Berrys et fais augmenter ta prime!
      <%= link_to 'Parier!', questions_path, class: "text-center" %>
    </h1>
    </div>

    <% @articles.sort_by(&:created_at).reverse.first(10).each do |article| %>
      <div class="card mb-4">
        <h2 class="text-center m-2 font-custom-title"><%= article.title %></h2>
        <% if article.image != nil %>
          <%=  image_tag article.image, :class => "article-photo"  %>
        <% end %>
        <h3 class="m-3 font-custom"><%=  article.text%>
        <% if article.link != nil %>
          <%= link_to article.link, article.link, target: :_blank %>
        </h3>
         <p class="mx-3">Posté le: <%= article.created_at.strftime("%d %b. %Y") %></p>
        <% end %>
      </div>
    <% end %>
</div>

