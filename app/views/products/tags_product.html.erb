<div class="container">
  <% if user_signed_in? && current_user.admin == true %>
    <%= link_to 'Ajouter un produit', new_product_path, class: "btn btn-warning" %>
  <% end %>
      <div class="col-12 col-md-8 text-center mx-auto">
        <div class="card m-3">
          <%= cl_image_tag @products.first.photo , :class => "product-photo mx-auto mt-3" %>
          <div class="card-body">
            <h5 class="card-title font-custom"><%= @products.first.name %> pour <%= @products.first.price %>€</h5>
            <%= link_to "Détails", product_path(@products.first), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
  <div>
    <h2 class=" p-2 text-center font-custom-title"> <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
Catégories  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <%= link_to "Tout les articles", products_path %>
    <br>
    <% @products.uniq{|product| product.tags}.each do |product| %>
        <% if product.tags != "" %>
        <% @product_tags = product.tags %>
      <br>
         <%= link_to "#{product.tags}", product_tags_product_path(product) %>
      <br>
        <% end %>
    <% end %>
  </div>
</div> </h2>
  </div>
  <div class="row">
      <% @products.sort_by(&:created_at).each do |product| %>
      <% if product.tags.include?(@product.tags) %>
        <div class="col-12 col-md-4">
          <div class="card m-3">
            <%= cl_image_tag product.photo , :class => "product-photo mx-auto mt-3" %>
            <div class="card-body">
              <h5 class="card-title font-custom"><%= product.name %> <%= product.price %>€</h5>
              <%= link_to "Détails", product_path(product), class: "btn btn-primary" %>
              <% if user_signed_in? && current_user.admin == true %>
                <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
