<div class="container">
  <div class="card ">
    <h1 class="mx-auto font-custom-title">Paris les plus récents</h1>
   <h5 class="font-custom mx-auto"> Recevez 10.000B en vous connectant chaque jour!</h5>
     <p class="ml-3"> Trier: <%= link_to 'Les paris en cours', question_sort_path(1) %> / <%= link_to 'par Tag', question_sort_tag_path(1) %> </p>
  </div>


<div class="row">
    <% @questions.sort_by(&:created_at).reverse.each do |question| %>
      <div class="col-8 col-md-6">
        <div class="card m-3">
          <%= cl_image_tag question.photo , :class => "product-photo mx-auto mt-3" %>
          <div class="card-body">
            <h5 class="card-title"><%= question.title %></h5>
            <%= link_to "Details", question_path(question), class: "btn btn-success m-2 rounded-pill border border-success" %>
            <% if question.closed %>
          <%= "Pari cloturé" %>
        <% else %>
          <%= "en cours" %>
        <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
