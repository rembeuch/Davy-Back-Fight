<div class="container">
  <div class="card ">
    <h1 class="mx-auto font-custom-title">Paris les plus récents</h1>
   <h5 class="font-custom mx-auto"> Recevez 10.000B en vous connectant chaque jour!</h5>
     <p class="ml-3"> Trier: <%= link_to 'Les paris en cours', question_sort_path(1) %> / <%= link_to 'par Tag', question_sort_tag_path(1) %> </p>
  </div>
    <% if current_user.admin == true %>
    <%= link_to 'créer un nouveau paris', new_question_path, class: "btn btn-warning" %>
    <% end %>
  <% @questions.sort_by(&:created_at).reverse.each do |question| %>
    <div class="card-product">
      <%= cl_image_tag question.photo, :class => "question-photo" %>
      <div class="card-product-infos m-2">
        <h2 class=""> <%= question.title %></h2>
        <%= link_to 'Détails', question_path(question), class: "btn btn-success m-2 rounded-pill border border-success" %>
        <% if question.closed %>
          <%= "Pari cloturé" %>
        <% else %>
          <%= "en cours" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

