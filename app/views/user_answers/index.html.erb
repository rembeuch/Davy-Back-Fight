
<div class="container">

  <h2 class="card p-5 mb-4 text-center font-custom-title">Recevez 10.000B en vous connectant chaque jour!</h2>

  <h1 class="card p-5 mb-4 text-center font-custom-title">Vos Paris <%= link_to 'Vos Commandes', orders_path %></h1>
    <% @user_answers.sort_by(&:created_at).reverse.each do |user_answer| %>
    <div class="card-product">
      <%= cl_image_tag user_answer.answer.question.photo, :class => "question-photo" %>
      <div class="card-product-infos">
        <h2><%= user_answer.answer.question.title %></h2>
          Votre réponse:
           <strong> <%= user_answer.answer.text %></strong>
            <br>
          Montant misé:
          <strong> <%=number_with_delimiter(user_answer.amount, :delimiter => '.')%> B </strong>
          Gain Potentiel en cas de bonne réponse:
          <strong> <%= number_with_delimiter(user_answer.amount * user_answer.answer.multiplier, :delimiter => '.') %>B </strong>
          <% if user_answer.answer.status == 'En cours'  %>
           <span class="text-primary"> <%= user_answer.answer.status%></span>
          <% elsif user_answer.answer.status == 'Validé!' %>
            <span class="text-success"> <%= user_answer.answer.status%></span>
          <% else %>
            <span class="text-danger"> <%= user_answer.answer.status%></span>
          <% end %>
          <% if user_answer.closed == false && user_answer.answer.status == 'Validé!'  %>
            <%= link_to "Récupérez vos gains!", user_answer_win_path(user_answer), method: :patch, class: "btn btn-success", id: "gain" %>
          <% end %>
      </div>
    </div>
  <% end %>
</div>

<script>
  Document.getElementById("gain").disabled = true;
</script>
